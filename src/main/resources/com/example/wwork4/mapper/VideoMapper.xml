<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.wwork4.mapper.VideoMapper">
    <select id="searchVideo" resultType="com.example.wwork4.pojo.DO.VideoDO">
        select *
        from video
        <where>
            <if test="keyword!=null">
                title like concat('%',#{keyword},'%')
            </if>
            <if test="from_date!=null and to_date!=null">
                and createdAt between #{from_date} and #{to_date}
            </if>
            <if test="username!=null">
                and userid=#{username}
            </if>
            <if test="start!=null and page_size!=null">
                LIMIT #{start}, #{page_size}
            </if>
        </where>

    </select>

    <select id="videoRank" resultType="com.example.wwork4.pojo.DO.VideoDO">
        select * from video
        <if test="videoIds != null and videoIds.size() > 0">
            where id in

            <foreach collection="videoIds" item="videoId" open="(" close=")" separator=",">
                #{videoId}
            </foreach>
        </if>
        <if test="videoIds == null or videoIds.size() == 0">
            where 1=0 <!-- 如果 videoIds 为空，返回空结果 -->
        </if>

    </select>


</mapper>